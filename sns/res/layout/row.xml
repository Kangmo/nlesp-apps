<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:orientation="horizontal" android:id="@+id/rowLayout">

	<ImageView
	    android:id="@+id/imageView1"
	    android:layout_width="45dip"
	    android:layout_height="45dip"
	    android:layout_marginLeft="5dip"
	    android:layout_marginRight="5dip"
	    android:layout_marginTop="12dip"
	    android:background="@drawable/image_border"
	    android:src="@drawable/default_profile"
	    android:visibility="visible" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:descendantFocusability="beforeDescendants" android:layout_marginRight="5dip">

		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:layout_marginTop="10dip">			
			
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/textUser"
				android:text="BOB" android:textStyle="bold" android:textColor="@color/twimightTextDark"
				android:minLines="1" android:textSize="16sp" android:singleLine="true" />
			
			<ImageView android:id="@+id/showTweetVerified" android:src="@android:drawable/ic_secure"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:visibility="gone" android:layout_marginLeft="5dp" android:layout_marginTop="3dp" /> 

			<TextView android:layout_height="wrap_content" android:id="@+id/tweetCreatedAt"
				android:text="10 minutes ago" android:layout_gravity="right" android:singleLine="true"
				android:gravity="right" android:textSize="16sp" android:layout_width="fill_parent"
				android:textColor="@color/twimightTextLight" android:layout_marginLeft="5dp"/>

		</LinearLayout>

		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:layout_marginTop="10dip">			

			<TextView
			    android:id="@+id/textText"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="12dip"
			    android:text="The latest status "
			    android:textColor="@color/twimightTextDark"
			    android:textSize="15sp" />

			<TextView
			    android:id="@+id/textComments"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="right"
			    android:layout_marginBottom="12dip"
			    android:gravity="right"
			    android:text="    "
			    android:textColor="@color/red"
			    android:textSize="15sp" />

		</LinearLayout>
			
	</LinearLayout>
</LinearLayout>
